---
interface Props {
		languaje: string;
}
import NavBar from "@/components/NavBar.astro";
import TeamSection from "@/components/sections/TeamSection.astro";
import ProviderSection from "@/components/sections/ProviderSection.astro";
import RecentWorks from "@/components/sections/RecentWorks.astro";
import { getI18N } from "@/i18n/index";
import { Image } from "astro:assets";

const { languaje } = Astro.props;
const i18n = getI18N({ currentLocale: languaje });
---

<header>
	<NavBar languaje={languaje} />
	<h1 class="text-4xl font-bold text-center dark:text-zinc-100">
		{i18n.landing.header.title}
	</h1>
	<p class="text-2xl text-center dark:text-zinc-100">
		{i18n.landing.header.subtitle}
	</p>
	<div class="px-6 py-2">
		<Image
			class="object-cover w-full rounded-2xl aspect-video h-96"
			src="/img/image.png"
			alt="development-agency"
			width="1920"
			height="1080"
		/>
	</div>
</header>
<main class="px-6">
	<TeamSection />
	<ProviderSection />
	<RecentWorks />
</main>
<footer class="py-24 text-center">
	<hr class="border-t-2 border-primary-500 w-1/2 mx-auto my-4" />
	<p>Made with ❤️ by the Omnitech Development team.</p>
</footer>
